<div class="row medium-10 medium-centered">
  <div class="row">
    <div class="column medium-3">
      <button class="button" {{action 'addNote'}}>{{fa-icon 'plus'}} Add Note</button>
    </div>

    <div class="column medium-3">
      <button class="button" {{action 'pauseAll'}}>{{fa-icon 'pause'}} Pause All</button>
    </div>

    <div class="column medium-3">
      <button class="button" {{action 'playAll'}}>{{fa-icon 'play'}} Play All</button>
    </div>

    <div class="column medium-3">
      <button class="button" {{action 'save'}}>
        {{#if isSaving}}
          {{fa-icon 'spinner fa-spin'}}
        {{else}}
          {{#if hasSavedRecently}}
            {{fa-icon 'check-circle-o'}}
          {{else}}
            {{fa-icon 'save'}}
          {{/if}}
        {{/if}}
        Save
      </button>
    </div>
  </div>

  <div class="row">
    <div class="column medium-1">
      <label>Pitch</label>
    </div>

    <div class="column medium-1">
      <label>Mod</label>
    </div>

    <div class="column medium-2">
      <label>Waveform</label>
    </div>

    <div class="column medium-1">
      <label>Octave</label>
    </div>

    <div class="column medium-2">
      <label>Frequency</label>
    </div>

    <div class="column medium-1">
      <label>On/Off</label>
    </div>

    <div class="column medium-2">
      <label>Volume</label>
    </div>

    <div class="column medium-2">
    </div>
  </div>

  {{#each notes as |note|}}
    <div class="row">

      <div class="column medium-1">
        <select onchange={{action (mut note.pitch) value='target.value'}}>
          {{#each pitchOptions as |pitch|}}
            <option value={{pitch}} selected={{eq pitch note.pitch}}>{{pitch}}</option>
          {{/each}}
        </select>
      </div>

      <div class="column medium-1">
        <select onchange={{action (mut note.modulator) value='target.value'}}>
          {{#each modulatorOptions as |modulator|}}
            <option value={{modulator.value}} selected={{eq modulator note.modulator}}>{{modulator.name}}</option>
          {{/each}}
        </select>
      </div>

      <div class="column medium-2">
        <select class="" onchange={{action (mut note.waveform) value='target.value'}}>
          {{#each waveformOptions as |waveform|}}
            <option value={{waveform}} selected={{eq waveform note.waveform}}>{{waveform}}</option>
          {{/each}}
        </select>
      </div>

      <div class="column medium-1">
        {{input type='number' value=note.octave}}
      </div>

      <div class="column medium-2">
        {{input readonly=true value=note.frequency}}
      </div>

      <div class="column medium-1">
        {{x-toggle toggle='toggleNotes' name=note toggled=note.isPlaying}}
      </div>

      <div class="column medium-2">
        {{input type='range' min='0' max='1' step='0.1' value=note.volume}}
      </div>

      <div class="column medium-2">
        <button class="button alert" {{action 'removeNote' note}}>
          {{fa-icon 'times'}} Delete
        </button>
      </div>

    </div>
  {{/each}}

</div>
